<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E9E9E9"
    android:foreground="#001F9E1F"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/enchanted_logo_no_background"
        android:layout_width="115dp"
        android:layout_height="115dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="68dp"
        android:background="@drawable/ic_logo"
        android:textColor="#000000"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button

        android:id="@+id/button3"
        android:layout_width="275dp"
        android:layout_height="wrap_content"
        android:background="#32BEA6"
        android:elevation="2dp"
        android:fontFamily="@font/montserrat_bold"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="PAST PLAYLISTS"
        android:textColor="#F2F3F3"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button"
        app:layout_constraintVertical_bias="0.835" />

    <Button
        android:id="@+id/button"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="275dp"
        android:layout_height="wrap_content"
        android:background="#32BEA6"
        android:elevation="2dp"
        android:fadingEdgeLength="@android:dimen/dialog_min_width_minor"
        android:fontFamily="@font/montserrat_bold"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:shadowColor="#001B1919"
        android:text="HOST"
        android:textColor="#F2F3F3"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.485"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.724" />

    <Button
        android:id="@+id/button2"
        android:layout_width="275dp"
        android:layout_height="wrap_content"
        android:background="#32BEA6"
        android:elevation="2dp"
        android:fontFamily="@font/montserrat_bold"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="JOIN"
        android:textColor="#F2F3F3"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/button3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.485"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button"
        app:layout_constraintVertical_bias="0.491" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:fontFamily="@font/pacifico"
        android:text=" Music Compromiser"
        android:textColor="#32BEA6"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/enchanted_logo_no_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.458"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />


</androidx.constraintlayout.widget.ConstraintLayout>